  <div id='admin-welcome'>
    <h1>Welcome <%=ENV['HTTP_AUTH_USERNAME']%></h1>
  </div>

  <div class='container' id='upload-options'>
    <%= form_tag admin_path, multipart: true do %>
      <div class='option-tile'>
        <% if flash.present? %>

          <i class="far fa-smile-wink fa-5x"></i>
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= value %></div>
          <% end %>
        <% else %>
        <i class="fas fa-file-csv fa-5x"></i>
        <% end %>
        <h3>
          Upload Inventory
        </h3>
        <%= file_field_tag :file %>
      <div>
      <br>
      <br>
      <%= button_tag id: 'hidden-submit', type: 'submit' do %> 
        <i class="fas fa-cloud-upload-alt fa-4x"></i>

      <% end %>
    <% end %>	
  </div>